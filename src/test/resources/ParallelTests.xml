<suite name="testNG Suite" thread-count="3" parallel = "tests">
	<test name="Chrome Tests">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.learning.selenium.seleniumWebDriverBasics.testng.ParallelTests" />
		</classes>
	</test>
	<test name="Firefox Tests">
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="com.learning.selenium.seleniumWebDriverBasics.testng.ParallelTests" />
		</classes>
	</test>
	<test name="IE Tests">
		<parameter name="browser" value="ie"></parameter>
		<classes>
			<class name="com.learning.selenium.seleniumWebDriverBasics.testng.ParallelTests" />
		</classes>
	</test>
</suite>